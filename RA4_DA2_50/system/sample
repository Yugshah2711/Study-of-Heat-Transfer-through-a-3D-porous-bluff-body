FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;

libs ("libsampling.so");

interpolationScheme cellPoint;

setFormat       raw;

sets
(

    U
    {
        type    uniform;
        axis    z;
        start   (0 0.5 0);
        end     (0 0.5 0.5);
        nPoints 50;
    }

);


fields          (U T);

